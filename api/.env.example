# ============================================
# AETERNA API CONFIGURATION
# ============================================
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to git!

# Core required keys for Aeterna
# Choose ONE LLM provider and set its key/base URL
LLM_PROVIDER=gemini

# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Moonshot (if using)
MOONSHOT_API_KEY=your_moonshot_key_here
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1

# DeepSeek (if using)
DEEPSEEK_API_KEY=your_deepseek_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Gemini (if using) - RECOMMENDED
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-2.5-flash

# Qwen / Tongyi (if using)
QWEN_API_KEY=your_qwen_key_here
QWEN_MODEL_NAME=qwen-max

# Ollama local (if using local models)
OLLAMA_BASE_URL=http://localhost:11434

# Pollinations (optional)
POLLINATIONS_API_KEY=your_pollinations_key_here
POLLINATIONS_BASE_URL=https://pollinations.ai/api/v1

# Video material provider keys (at least one key needed)
# Pexels: comma-separated keys in quotes, e.g., "key1,key2"
PEXELS_API_KEYS=your_pexels_keys_here
# Pixabay: set your Pixabay key here (preferred)
PIXABAY_API_KEYS=your_pixabay_key_here

# Network/proxy (optional)
HTTPS_PROXY=
HTTP_PROXY=
NO_PROXY=localhost,127.0.0.1

# Binary paths (only if auto-detect fails)
FFMPEG_PATH=
IMAGEMAGICK_PATH=

# Server ports
LISTEN_HOST=0.0.0.0
LISTEN_PORT=8080
UI_PORT=8501
